<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawables="clr-namespace:WordyBlob.Drawables"
             xmlns:local="clr-namespace:WordyBlob"
             x:Class="WordyBlob.MainPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Gray">

    <ContentPage.Resources>
    </ContentPage.Resources>

    <Grid x:Name="MainGrid" RowDefinitions="220*,1980*" ColumnDefinitions="1080*" Padding="0">
        <!-- Row 0 -->
        <!-- Scoreboard -->
        <!-- Cols: Border,Top Score,Border,Current Score,Border,Time Left,Border,Clock,Border -->
        <Grid x:Name="ScoreboardGrid" RowDefinitions="33*,73*,79*,13*,22*" ColumnDefinitions="21*,216*,38*,216*,38*,144*,8*,152*,15*" Padding="0"
            Grid.Row="0"
            Grid.Column="0" 
            Grid.RowSpan="1"
            Grid.ColumnSpan="1">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTouchScoreboard"/>
            </Grid.GestureRecognizers>
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="5"
                Grid.ColumnSpan="9"
                Source="scoreboard.png"
                Aspect="Fill" HorizontalOptions="Fill" VerticalOptions="Fill"
                x:Name="ScoreBoard">
            </Image>
            <!-- Top Score -->
            <GraphicsView x:Name="TopScoreGraphicsView"
                Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="1">
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTouchTopScore"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
            <!-- Current Score -->
            <GraphicsView x:Name="ScoreGraphicsView"
                Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="1">
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTouchCurrentScore"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
            <!-- Time -->
            <GraphicsView x:Name="TimeGraphicsView"
                Grid.Row="2" Grid.Column="5" Grid.RowSpan="2" Grid.ColumnSpan="1">
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTouchClock"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
            <!-- Clock -->
            <GraphicsView x:Name="ClockGraphicsView"
                Grid.Row="1" Grid.Column="7" Grid.RowSpan="2" Grid.ColumnSpan="1">
                <GraphicsView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTouchClock"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
        </Grid>

        <!-- Row 1 -->
        
        <!-- Main game view -->
        <local:TouchableGraphicsView x:Name="WordyBlobGraphicsView"
            Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="1">
            <local:TouchableGraphicsView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTappedMainGame"/>
            </local:TouchableGraphicsView.GestureRecognizers>
        </local:TouchableGraphicsView>
    </Grid>

</ContentPage>
